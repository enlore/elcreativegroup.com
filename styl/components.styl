$btn-black = black
$btn-white = white
$btn-hover-bg = $peach-skin
$span-active-bg = $peach-skin

.btn-elcg-lg
    border 3px solid $btn-black
    padding 0.5em
    display block
    border-radius 0
    background-color transparent
    font-size 18px

    @media (min-width: 600px)
        font-size 30px

    @media (min-width: $tablet)
        font-size 36px

    @media (min-width: $medium)
        font-size 46px

    a
        text-decoration none

    span
        display block
        border 3px solid transparent
        background-color $btn-black
        color $btn-white
        padding 0.5em 2em

    &:hover
        span
            color $btn-hover-bg
        background-color $btn-hover-bg

    &:active
        background-color transparent

        span
            color $btn-black
            background-color $span-active-bg
            border 3px solid $btn-black


.btn-elcg
    border-left: 1px solid $btn-border;
    border-radius: 0;
    color: $btn-color;
    font-size: 1.4em;
    background-color: transparent;

    &:hover
        color: $btn-color;
        border-left: 0;
        border-bottom: 1px solid $btn-border;


    &:active
        color: #333;


