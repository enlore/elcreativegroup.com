/* Hex grid for portfolio links
***************************************/

.container-hexes {
    margin-right: auto;
    margin-left: auto;
    //padding-left: 15px;
    //padding-right: 15px;
    width: auto;
}

.hex-box.red {
    background-color: $hex-bg;
}

.hex-box {
    width: 100%;
    height: 160px;
    display: block;
    span {
        display: block;
        text-align: center;
        color: #fff;
        position: relative;
        top: 30px;
        font-size: 26px;
        background-color: #141414;
        background-color: rgba(20, 20, 20, 0.7);
        font-family: "Engravers", Helvetica, sans;
    }
    &:hover, 
    &:active {
        text-decoration: none;
        span {
            color: #ad1616;
        }
    }
}

.hex-box.dj-ahlure { background-image: url('/img/bars/ahlure-lg.png'); border-bottom: 1px solid #141414; border-top: 1px solid #141414; }
.hex-box.tarboosh { background-image: url('/img/bars/tarboosh-lg.png'); border-bottom: 1px solid #141414; }
.hex-box.cafe-de-light { background-image: url('/img/bars/cafe-lg.png'); border-bottom: 1px solid #141414; }
.hex-box.graphic-design { background-image: url('/img/bars/graphic-design-lg.png'); border-bottom: 1px solid #141414; }

@media screen and (min-width: $tablet) {
    .portfolio-hexes {
        margin: 7em auto 3em;
        margin-left: -120px;
        z-index: -1;
        width: 1950px;
        padding-top: 0em;
        padding-bottom: 4em;
    }

    .hexes {
        clear: both;
        margin-top: 72px;
        margin-left: 54px;
        width: 1950px;

        &:nth-child(2n) {
            margin-left: -54px;
        }

        span {
            position: relative;
            width: 100%;
            top: none;
            text-align: center;
            display: block;
            font-size: 22px;
            font-family: Engravers, sans-serif;
        }

        .hex-box.tarboosh:hover, 
        .hex-box.tarboosh:active {
            background-image: url('/img/hexes/tarboosh-hex.jpg');
        }

        .hex-box.dj-ahlure:hover, 
        .hex-box.dj-ahlure:active {
            background-image: url('/img/hexes/ahlure-hex.png');
        }

        .hex-box.cafe-de-light:hover, 
        .hex-box.cafe-de-light:active {
            background-image: url('/img/hexes/cafedelight-hex.png');
        }

        .elcg {
            background-image: url('/img/hexes/elcg.png');
            background-size: 80%;
        }

        .hex-box.graphic-design:hover, 
        .hex-box.graphic-design:active {
            background-image: url('/img/hexes/graphic-design.jpg');
        }
    }

    .hex-box {
        position: relative;
        float: left;
        margin-left: 23px;
        display: block;
        width: 190px;
        height: 110px;
        background-position: 50% 50%;
        background-size: auto 300px;
        zoom: 1;
        span {
            display: block;
            text-align: center;
            line-height: 40px;
        }
    }
    .hex-1, .hex-2 {
        width: 100%;
        height: 100%;
        background: inherit;
        position: absolute;
        top: 0;
        left: 0;
        overflow: hidden;
    }

    .hex-1:before, 
    .hex-2:before {
        content: "";
        background: inherit;
        position: absolute;
        top: 0;
        left: 0;
        height: 220px;
        width: 190px;
    }

    .hex-1 {
        transform: rotate(60deg);
        -moz-transform: rotate(60deg);
        -webkit-transform: rotate(60deg);

        backface-visibility: hidden;
        -moz-backface-visibility: hidden;
        -webkit-backface-visibility: hidden;
        &:before {
            transform: rotate(-60deg) translate(48px, -27px);
            -moz-transform: rotate(-60deg) translate(48px, -27px);
            -webkit-transform: rotate(-60deg) translate(48px, -27px);
        }
    }

    .hex-2 {
        transform: rotate(-60deg);
        -moz-transform: rotate(-60deg);
        -webkit-transform: rotate(-60deg);

        backface-visibility: hidden;
        -moz-backface-visibility: hidden;
        -webkit-backface-visibility: hidden;
        &:before {
            transform: rotate(60deg) translate(-48px, -27px);
            -moz-transform: rotate(60deg) translate(-48px, -27px);
            -webkit-transform: rotate(60deg) translate(-48px, -27px);
        }
    }
}
