skew-it($align)
    .skew-me
        position relative
        z-index 1

        h1
            color $white
            z-index 100
            padding 1em
            position relative

        .skew-you
            background-color $black
            position absolute
            width 100%
            height 100%
            top 0
            z-index 10

            if $align == "left"
                @media (min-width: $large)
                    transform(skewX(15deg))
                    left -20em

            else if $align == "right"
                @media (min-width: $large)
                    transform(skewX(15deg))
                    right -20em

.our-work
    skew-it("right")

    .current-gigs
        p
            font-size 24px
            color $white

        p.reveal
            color $black

        a
            padding 16px
            margin-top 1em
            display block
            background-color $black
            color $white

            transition background-color 150ms ease,
                color 150ms ease


            &:hover,&:active
                background-color $white
                color $black
                p
                    color $black

.about-us
    skew-it("left")

    .bio
        background-color rgba(0, 0, 0, 0.8)
        padding 1em

        h2
            color $white



