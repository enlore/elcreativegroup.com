skew-it($align)
    .skew-me
        position relative
        z-index 1

        h1
            color $white
            z-index 100
            padding 1em
            position relative

        .skew-you
            background-color $black
            position absolute
            width 100%
            height 100%
            top 0
            z-index 10

            if $align == "left"
                @media (min-width: $large)
                    transform(skewX(-15deg))
                    left -20em

            else if $align == "right"
                @media (min-width: $large)
                    transform(skewX(15deg))
                    right -20em

.welcome
    margin-top 5em
    background-color $welcome-bg-fallback
    background-color $welcome-bg
    color $welcome-fg
    padding 2em

    h1
        margin-top 0
        letter-spacing 3px
        font-size 30px
        border-bottom 1px solid $white
        .ampersand
            font-size 25px


        @media (min-width $tablet)
            width 70%
    h2
        font-size 54px
    p
        font-size 20px

    .red
        color $the-word-you

.our-work
    skew-it("right")

    .current-gigs
        h2
            font-size 32px

        hr
            border-top 1px solid lighten($black, 20%)

        .copy
            padding 1em

        p
            font-size 24px
            color $white

        p.categories
            color lighten($black, 25%)
            font-size 20px

        a
            border-bottom 2px solid $pink

            &:nth-child(2)
                border-bottom 2px solid $purple

            display block
            background-color $black
            color $white

            transition background-color 150ms ease,
                color 150ms ease


            &:hover,&:active
                //background-color $white

                p.categories
                    color lighten($black, 25%)

