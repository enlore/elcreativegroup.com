.masque.active {
    background-image: url('/img/logo_nav.png');
    background-repeat: no-repeat;
    background-position: center center;
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    z-index: 100000;
}

transition($props) {
    -webkit-transition: $props;
    transition: $props;
}

body {
    position: relative;
    border-top: 70px solid black;

    transition(height 200ms ease);

    @media (min-width: $tablet) {
        border-top: $border-nav-connection solid black;
        &.active {
            border-top: $border-nav-connection - 30px solid black;
        }
    }
}

.bg-wrap.index {
    background-image: url('/img/abstract-bg.jpg');
    background-color: $black;
    //background-size: cover;
    background-position: center -235px;
    background-repeat: no-repeat;
    background-attachment: fixed;
}

center-abs($object-width) {
    position: absolute;
    left: 50%;
    right: 50%;
    margin-left: -($object-width / 2);
}

.logo {
    transition(height 200ms ease);

    center-abs(127px);

    &.active {
        height: 45px;
        center-abs(61px);
    }
}

.navbar-elcg {
    background-color: $nav-bg-fallback;
    background-color: $nav-bg;
    margin-bottom: 0;

    transition(height 200ms ease);

    @media (min-width: $tablet) {
        padding-bottom: 1em;
        padding-top: 1em;
        height: $border-nav-connection;

        &.active {
            height: $border-nav-connection - 50px;

            li > a {
                font-size: 18px;
            }
        }
    }

    li > a {
        engravers();
        text-align: center;
        font-size: 22px;
        letter-spacing: 3px;
        color: $white;
        transition(font-size 200ms ease);
        &:active, &:hover {
            background-color: transparent;
            color: $nav-hover-fg;
            border-bottom: 1px solid $nav-hover-fg;
        }
    }
}

section {
    padding-top: 6em;
    padding-bottom: 6em;

    h1 {
        color: $section-head-color;
        padding-bottom: 5px;
        font-size: 36px;
    }
}

header {
    position: relative;
    padding-bottom: 7em;

    .welcome {
        margin-top: 5em;
        background-color: $welcome-bg-fallback;
        background-color: $welcome-bg;
        color: $welcome-fg;
        padding: 2em;

        h1 {
            margin-top: 0;
            letter-spacing: 3px;
            font-size: 30px;
            border-bottom: 1px solid $white;
            .ampersand {
                font-size: 25px;
            }

            @media (min-width: $tablet) {
                width: 70%;
            }
        }

        h2 { font-size: 54px; }
        p { font-size: 20px; }
        .red { color: $the-word-you; }
    }
}


