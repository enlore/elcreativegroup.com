.services
    background-color $black

    h2
        text-align center
        font-size 30px
        border-bottom none
        color white

    .wrap
        background-repeat no-repeat
        background-position center center
        margin-left auto
        margin-right auto
        margin-bottom 30px
        line-height 30px
        position relative
        max-width 100%

        $wrap-width = 328px
        $wrap-height = 220px

        width $wrap-width
        height $wrap-height

        @media (min-width: $tablet)
            width $wrap-width * 1.412
            height $wrap-height * 1.412

        img
            width $wrap-width * 0.9
            height $wrap-height * 0.9
            center-2d($wrap-width * 0.9, $wrap-height * 0.9)

            @media (min-width: $tablet)
                $tab-const = 1.39
                width $wrap-width * $tab-const
                height $wrap-height * $tab-const
                center-2d($wrap-width * $tab-const, $wrap-height * $tab-const)


    .wrap.web-design
        //background-image url("/img/web_design.svg")
        background-image url("/img/services_sheet.png")
        background-position 0 0

    .wrap.print-media
        //background-image url("/img/print_media.svg")
        background-image url("/img/services_sheet.png")
        background-position -504px 0

    .wrap.branding
        //background-image url("/img/branding.svg")
        background-image url("/img/services_sheet.png")
        background-position 0px -343px

    .wrap.social-media
        //background-image url("/img/social_media.svg")
        background-image url("/img/services_sheet.png")
        background-position -504px -343px

