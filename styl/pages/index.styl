skew-it($align)
    .skew-me
        position relative
        z-index 1

        h1
            color $white
            z-index 100
            padding 0.5em
            position relative

        .skew-you
            background-color $black
            position absolute
            width 100%
            height 100%
            top 0
            z-index 10

            if $align == "left"
                @media (min-width: $large)
                    transform(skewX(-15deg))
                    left -20em

            else if $align == "right"
                @media (min-width: $large)
                    transform(skewX(15deg))
                    right -20em

.masthead
    margin 0
    margin-top -70px
    padding 0
    position relative

    height 100%
    width 100%

    img.slide-img
        display block

    .carousel
        .item
            .carousel-caption
                bottom initial
                right initial
                top 100px
                left 50%
                transform translateX(-50%)
                background #030303
                background rgba(0, 0, 0, 0.7)
                padding 5px 25px

                text-align center
                position absolute
                color white
                z-index 10000

                h1
                    margin 0

    h2
        bottom 105px
        left 50%
        transform translateX(-50%)
        background #030303
        background rgba(0, 0, 0, 0.7)
        padding .1em

        text-align center
        position absolute
        color white
        z-index 10000

