@font-face
    src: url('/font/Optima.otf'),
        url('/font/Optima.ttf');
    font-family: 'Optima';


@font-face
    src: url('/font/myriad-pro.otf');
    font-family: 'MyriadPro';


@font-face
    src: url('/font/engravers-gothic-bt.ttf');
    font-family: 'Engravers Gothic';


.ampersand
    font-family: 'Optima', Helvitca, sans-serif;


.engravers, h1, h2, h3, .h1, .h2, .h3
    font-family: 'Engravers Gothic', Helvetica, sans-serif;

engravers()
    font-family: 'Engravers Gothic', Helvetica, sans-serif;


.myriad, a, p, span, li, h4, h5, h6, .h4, .h5, .h6, label, button, legend
    font-family: 'MyriadPro', Arial, sans-serif;

a
    color: $anchor-color;
    &:hover,
    &:active
        color: $anchor-color;
        text-decoration none

p, li
    font-size: 18px;
    color: $p-color;


ul ul
    padding-left: 20px;


$btn-black = black
$btn-white = white
$btn-hover-bg = $blue
$span-active-bg = $blue

.btn-elcg-lg
    border 3px solid $btn-black
    padding 0.5em
    display block
    border-radius 0
    background-color transparent
    font-size 18px

    @media (min-width: 600px)
        font-size 30px

    @media (min-width: $tablet)
        font-size 36px

    @media (min-width: $medium)
        font-size 46px

    a
        text-decoration none

    span
        display block
        border 3px solid transparent
        background-color $btn-black
        color $btn-white
        padding 0.5em 2em

    &:hover
        span
            color $btn-hover-bg
        background-color $btn-hover-bg

    &:active
        background-color transparent

        span
            color $btn-black
            background-color $span-active-bg
            border 3px solid $btn-black


.btn-elcg
    border-left: 1px solid $btn-border;
    border-radius: 0;
    color: $btn-color;
    font-size: 1.4em;
    background-color: transparent;

    &:hover
        color: $btn-color;
        border-left: 0;
        border-bottom: 1px solid $btn-border;


    &:active
        color: #333;

article
    ul
        padding: 0
        list-style none
        margin-left 0
        padding-left 1em
        text-indent -1em

        li
            margin-bottom: 5px;

        li:before
            content "âž¢ "
            font-size: 24px

    p, li
        font-size: 22px;

    img
        margin-bottom: 20px;

        border: 1px solid $black;
        box-shadow: 0px 10px 0px -6px $black;
