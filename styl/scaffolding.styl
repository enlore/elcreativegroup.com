@font-face
    src url('/font/Optima.otf'), url('/font/Optima.ttf')
    font-family 'Optima'

@font-face
    src url('/font/myriad-pro.otf')
    font-family 'MyriadPro'

@font-face
    src url('/font/engravers-gothic-bt.ttf')
    font-family 'Engravers Gothic'

.ampersand
    font-family 'Optima', Helvitca, sans-serif

.engravers, h1, h2, h3, .h1, .h2, .h3
    font-family 'Engravers Gothic', Helvetica, sans-serif
    letter-spacing 4px

engravers()
    font-family 'Engravers Gothic', Helvetica, sans-serif

.myriad, a, p, span, li, h4, h5, h6, .h4, .h5, .h6, label, button, legend, cite
    font-family 'MyriadPro', Arial, sans-serif

myriad()
    font-family 'MyriadPro', Arial, sans-serif

cite
    font-weight bold


h1, .h1
    font-size 36px

    @media (min-width: $tablet)
        font-size 56px

    margin-bottom 3rem

h2, .h2
    font-size 24px

    @media (min-width: $tablet)
        font-size 44px

    margin-bottom 2.8rem

h3, .h3
    font-size 18px

    @media (min-width: $tablet)
        font-size 38px

    margin-bottom 2.6rem

h4, .h4
    font-size 16px

    @media (min-width: $tablet)
        font-size 32px

    margin-bottom 2.4rem

h5, .h5
    font-size 14px

    @media (min-width: $tablet)
        font-size 26px

    margin-bottom 2.2rem

h6, .h6
    font-size 14px

    @media (min-width: $tablet)
        font-size 20px

    margin-bottom 2rem


a
    color: $anchor-color;
    &:hover,
    &:active
        color: $anchor-color;
        text-decoration none

p, li
    font-size: 18px;
    color: $p-color;


ul ul
    padding-left: 20px;

ul li
    list-style none

article
    ul
        padding: 0
        list-style none
        margin-left 0
        padding-left 1em
        text-indent -1em

        li
            margin-bottom: 5px;

        li:before
            content "âž¢ "
            font-size: 24px

    p, li
        font-size: 22px;

    img
        margin-bottom: 20px;

        border: 1px solid $black;
        box-shadow: 0px 10px 0px -6px $black;

section
    padding-top 4rem
    padding-bottom 4rem

    h1
        color $section-head-color

header
    position relative
    padding-bottom 4rem

footer
    h1
        font-size 36px
    h2
        font-size 32px
    h3
        font-size 28px
